@using Microsoft.AspNetCore.Mvc.Localization;
@model EditUserViewModel

@inject IHtmlLocalizer Localizer;

@{
    var title = @Localizer["Administration_User_Edit_Title"].Value;
    ViewData["Title"] = title;
}

@section SectionBar{
    <partial name="_SectionBar" model="@title" />
}
<form method="post">
    <div class="row">
        <div class="col-12">
            <partial name="_ResponseMessage" model="ViewData.ModelState" />
        </div>

        <div class="col-4">

            @*<div asp-validation-summary="ModelOnly" class="text-red-intense"></div>*@
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="d-flex align-items-start flex-column flex-grow-1">

                <div class="form-group w-100">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" value="@Model.UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-red-intense"></span>
                </div>
                <div class="form-group w-100">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" value="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-red-intense"></span>
                </div>
                <div class="w-100">
                    <hr class="silver" />
                    <a class="btn btn-outline-silver me-2" asp-action="Index">@Localizer["Shared_Buttons_BackToList"]</a>
                    <input type="submit" value="@Localizer["Shared_Buttons_Update"]" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h3>@Localizer["Administration_User_Edit_RolesSection"]</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        @foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">@Localizer["Administration_User_Edit_RolesSection_Empty"]</h5>
                    }
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-primary" asp-action="ManageRoles" asp-route-id="@Model.Id">@Localizer["Administration_User_Edit_AddOrRemoveRolesButton"]</a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>@Localizer["Administration_User_Edit_ClaimsSection"]</h3>
                </div>
                <div class="card-body">
                    @if (Model.Claims.Any())
                    {
                        @foreach (var claim in Model.Claims)
                        {
                            <h5 class="card-title">@claim</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">@Localizer["Administration_User_Edit_ClaimsSection_Empty"]</h5>
                    }
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-primary" asp-action="ManageClaims" asp-route-id="@Model.Id">@Localizer["Administration_User_Edit_AddOrRemoveClaimsButton"]</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
