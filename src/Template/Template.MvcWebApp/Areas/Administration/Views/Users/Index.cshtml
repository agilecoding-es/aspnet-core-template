@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc.Localization;
@using Template.Security.Authorization;
@using Template.Domain.Entities.Identity;
@model IEnumerable<User>

@inject IAuthorizationService AuthService;
@inject IHtmlLocalizer Localizer;

@{
    var title = @Localizer["Administration_Users_Index_Title"].Value;
    ViewData["Title"] = title;

    var canEditUser = (await AuthService.AuthorizeAsync(User, Policies.EditUser)).Succeeded;
    var canDeleteUser = (await AuthService.AuthorizeAsync(User, Policies.DeleteUser)).Succeeded;
}

@section SectionBar{
    <partial name="_SectionBar" model="title" />
}
<p class="text-end">
    <a class="btn btn-outline-primary" asp-area="Identity" asp-controller="Account" asp-action="Register">@Localizer["Shared_Buttons_CreateNew"]</a>
</p>
<hr />
<div>
    <partial name="_ResponseMessage" model="ViewData.ModelState" />

    <div class="grid">
        @foreach (var user in Model)
        {
            <div class="g-col-3">
                <div class="card">
                    <div class="card-body position-relative">
                        @*<a asp-action="Details" asp-route-id="@user.Id">*@
                        <h5 class="card-title">
                            @Html.DisplayFor(modeluser => user.UserName)
                        </h5>
                        @*</a>*@

                        <div class="row">
                            <div class="col text-end">

                                @if (canEditUser)
                                {
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">@Localizer["Shared_Buttons_Edit"]</a>
                                }
                                @if (canDeleteUser)
                                {
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-outline-red-intense" onclick="return confirm('Are you sure you wanto to delete this user [@user.UserName]?)">@Localizer["Shared_Buttons_Delete"]</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section scripts{
    <script type="text/javascript" src="~/content/js/Areas/SampleMVC/views/sample-list/index.bundle.js"></script>
}