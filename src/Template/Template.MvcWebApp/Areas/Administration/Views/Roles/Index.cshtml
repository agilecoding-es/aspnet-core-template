@using Microsoft.AspNetCore.Mvc.Localization;
@using Template.Domain.Entities.Identity;
@model IEnumerable<Role>

@inject IHtmlLocalizer Localizer;

@{
    var title = @Localizer["Administration_Roles_Index_Title"].Value;
    ViewData["Title"] = title;
}

@section SectionBar{
    <partial name="_SectionBar" model="title" />
}
<p class="text-end">
    <a class="btn btn-outline-primary" asp-action="Create">@Localizer["Shared_Buttons_CreateNew"]</a>
</p>
<hr />
<div>
    <partial name="_ResponseMessage" model="ViewData.ModelState" />

    <div class="grid">
        @foreach (var role in Model)
        {
            <div class="g-col-3">
                <div class="card">
                    <div class="card-body position-relative">
                        @*<a asp-action="Details" asp-route-id="@role.Id">*@
                        <h5 class="card-title">
                            @Html.DisplayFor(modelrole => role.Name)
                        </h5>
                        @*</a>*@

                        <div class="row">
                            <div class="col text-end">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                                <a class="btn btn-outline-red-intense" asp-action="Delete" asp-route-id="@role.Id">@Localizer["Shared_Buttons_Delete"].Value</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section scripts{
    <script type="text/javascript" src="~/content/js/Areas/SampleMVC/views/sample-list/index.bundle.js"></script>
}