        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h3>@Localizer["Administration_Roles_Edit_UsersSection"]</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        @foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">@Localizer["Administration_Roles_Edit_UsersSection_Empty"]</h5>
                    }
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-primary" asp-action="UsersInRole" asp-route-id="@Model.Id">@Localizer["Administration_Roles_Edit_AddOrRemoveUsersButton"]</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
