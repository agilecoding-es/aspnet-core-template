    <div class="row">
        <div class="col-12">
            @*<partial name="_ResponseMessage" model="ViewData.ModelState" />*@
        </div>
@*
        <div class="col-4">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="d-flex align-items-start flex-column flex-grow-1">

                <div class="form-group w-100">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" value="@Model.RoleName" class="form-control" disabled />

                    <span asp-validation-for="RoleName" class="text-dark-red"></span>
                </div>
                <div class="w-100">
                    <hr class="silver" />
                    <a class="btn btn-outline-light-blue-2 me-2" asp-action="Index">@Localizer["Shared_Buttons_BackToList"].Value</a>
