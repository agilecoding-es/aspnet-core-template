@using Microsoft.AspNetCore.Mvc.Localization;
@using Template.MvcWebApp.Areas.Sample.Models.SampleList;
@model SampleListViewModel
@inject IHtmlLocalizer Localizer;

@{
    ViewData["Title"] = "Detail";
}

@section SectionBar{
    <partial name="_SectionBar" model='"Detail"' />
}
<div>
    <partial name="_ResponseMessage" />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<br />
<hr class="silver" />
<a class="btn btn-outline-silver me-2" asp-action="Index">@Localizer["Shared_Buttons_BackToList"].Value</a>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Shared_Buttons_Edit"].Value</a>
