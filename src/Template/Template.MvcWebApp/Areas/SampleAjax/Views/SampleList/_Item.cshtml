@using Template.MvcWebApp.Areas.SampleAjax.Models.SampleList;
@model SampleItemViewModel;

<li class="list-group-item d-flex justify-content-between">
    <span class="d-flex align-items-center">@Model.Description</span>
    <form name="RemoveItemForm">
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
        <input type="hidden" asp-for="@Model.ListId" value="@Model.ListId" />
        <button type="submit" class="btn btn-link">
            <i class="bi bi-trash3 fs-5 text-dark-red"></i>
        </button>
    </form>
</li>
