@using Microsoft.AspNetCore.Mvc.Localization;
@using Template.MvcWebApp.Areas.SampleAjax.Models.SampleList;
@model Template.MvcWebApp.Areas.SampleAjax.Models.SampleList.EditSampleListViewModel
@inject IHtmlLocalizer Localizer;

@{
    var title = @Localizer["Sample_SampleList_Edit_Title"].Value;
    ViewData["Title"] = title;

    var newItem = new SampleItemViewModel()
            {
                ListId = Model.Id,

            };
}

@section SectionBar{
    <partial name="_SectionBar" model="@title" />
}
<div class="row">
    <div class="col-4" style="position: relative;">
        <form name="EditForm">
            <div id="Edit" asp-messages="All" hiding-delay="15" class="message-absolute position-absolute top-0 end-0"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <div class="d-flex align-items-start flex-column flex-grow-1">
                <div class="form-floating w-100">
                    <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="@Html.DisplayTextFor(m=>m.Name)" aria-describedby="btnAddItem" />
                    <label asp-for="Name" class="form-label"></label>
                    <span asp-validation-for="Name" class="invalid-feedback text-dark-red"></span>
                </div>
                <div class="w-100">
                    <hr class="silver" />
                    <a class="btn btn-outline-light-blue-2 me-2" asp-action="Index">@Localizer["Shared_Buttons_BackToList"].Value</a>
                    <button type="submit" class="btn btn-primary">@Localizer["Shared_Buttons_Update"].Value</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-8">
        <div class="card">
            <div class="card-body">
                <partial name="_AddItem" model="newItem" />
                <div class="js_Items"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <environment include="Development">
        <script type="text/javascript" src="~/content/js/Areas/SampleAjax/views/sample-list/edit.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/content/js/Areas/SampleAjax/views/sample-list/edit.bundle.min.js"></script>
    </environment>

}
