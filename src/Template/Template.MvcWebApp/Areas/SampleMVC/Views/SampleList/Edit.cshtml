@using Microsoft.AspNetCore.Mvc.Localization;
@using Template.MvcWebApp.Areas.SampleMvc.Models.SampleList;
@model Template.MvcWebApp.Areas.SampleMvc.Models.SampleList.EditSampleListViewModel
@inject IHtmlLocalizer Localizer;

@{
    var title = @Localizer["Sample_SampleList_Edit_Title"].Value;
    ViewData["Title"] = title;

    //ResponseMessageViewModel responseMessage = null;
    //if(ViewData.ContainsKey("ResponseMessage") && ViewBag.ResponseMessage != null)
    //{
    //    responseMessage = ViewBag.ResponseMessage;
    //}
}

@section SectionBar{
    <partial name="_SectionBar" model="@title" />
}
<div class="row">
    <div class="col-12">
        @*@if (responseMessage != null && responseMessage.Id == "Edit")
        {
            <partial name="_ResponseMessage" model="ViewData.ModelState" />
        }*@
    </div>
    <div class="col-4">
        <form asp-action="Edit">
            <div id="EditValidations" asp-validation-messages="All" class="text-dark-red"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <div class="d-flex align-items-start flex-column flex-grow-1">
                <div class="form-floating w-100">
                    <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="@Html.DisplayTextFor(m=>m.Name)" aria-describedby="btnAddItem" />
                    <label asp-for="Name" class="form-label"></label>
                    <span asp-validation-for="Name" class="invalid-feedback text-dark-red"></span>
                </div>
                <div class="w-100">
                    <hr class="silver" />
                    <a class="btn btn-outline-light-blue-2 me-2" asp-action="Index">@Localizer["Shared_Buttons_BackToList"].Value</a>
                    <input type="submit" value="@Localizer["Shared_Buttons_Update"].Value" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-8">
        <div class="card">
            <div class="card-body">
                <partial name="_AddItem" model="Model.NewItem" />
                <ul class="list-group mt-4">
                    @foreach (var item in Model.Items)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="d-flex align-items-center">@item.Description</span>
                            <form method="post" asp-action="RemoveItem" asp-route-listId="@Model.Id" asp-route-itemId="@item.Id">
                                <button type="submit" class="btn btn-link">
                                    <i class="bi bi-trash3 fs-5 text-dark-red"></i>
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
