@page
@using Microsoft.Extensions.Localization;
@model ChangePasswordModel

@inject IStringLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Identity_Account_Manage_ChangePassword_Title"];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-messages="All" class="text-dark-red"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.OldPassword)" />
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <span asp-validation-for="Input.OldPassword" class="invalid-feedback text-dark-red"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.NewPassword)" />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="invalid-feedback text-dark-red"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.ConfirmPassword)" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback text-dark-red"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Identity_Account_Manage_ChangePassword_Submit"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
