@page
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@model GenerateRecoveryCodesModel

@inject IHtmlLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Identity_Account_Manage_GenerateRecoveryCodes_Title"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    @Localizer["Identity_Account_Manage_GenerateRecoveryCodes_Description"]
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">@Localizer["Identity_Account_Manage_GenerateRecoveryCodes_Submit"]</button>
    </form>
</div>
