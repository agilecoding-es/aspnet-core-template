@page
@using Microsoft.Extensions.Localization;
@model LoginModel

@inject IStringLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Identity_Account_Login_Title"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>@Localizer["Identity_Account_Login_Subtitle"]</h2>
                <hr />
                <div asp-messages="All"></div>
                <div class="form-floating mb-2">
                    <input asp-for="Input.UsernameOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.UsernameOrEmail)" />
                    <label asp-for="Input.UsernameOrEmail" class="form-label"></label>
                    <span asp-validation-for="Input.UsernameOrEmail" class="invalid-feedback text-dark-red"></span>
                </div>
                <div class="form-floating mb-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.Password)" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="invalid-feedback text-dark-red"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Identity_Account_Login_Submit"]</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">@Localizer["Identity_Account_Login_ForgotPassword"]</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Identity_Account_Login_RegisterNewUser"]</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@Localizer["Identity_Account_Login_ReserndConfirmation"]</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        @{
            if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <section>
                    <h3>@Localizer["Identity_Account_Login_LoginServices"]</h3>
                    <hr />

                    @*There are no external authentication services configured.See this https://go.microsoft.com/fwlink/?LinkID=532715 article
                    about setting up this ASP.NET application to support logging in via external services.*@

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                </section>
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
