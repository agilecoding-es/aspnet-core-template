@page
@using Microsoft.Extensions.Localization;
@model RegisterModel

@inject IStringLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Identity_Account_Register_Title"];
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>@Localizer["Identity_Account_Register_Subtitle"]</h2>
            <hr />
            <div asp-validation-messages="All" class="text-dark-red"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.UserName)" />
                <label asp-for="Input.UserName"></label>
                <span asp-validation-for="Input.UserName" class="invalid-feedback text-dark-red"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.Email)" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="invalid-feedback text-dark-red"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.Password)" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="invalid-feedback text-dark-red"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.ConfirmPassword)" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback text-dark-red"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Identity_Account_Register_Submit"]</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        @{
            if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <section>
                    <h3>@Localizer["Identity_Account_Register_LoginServices"]</h3>
                    <hr />

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>

                </section>
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
