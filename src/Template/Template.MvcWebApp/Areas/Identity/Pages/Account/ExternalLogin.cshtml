@page
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@model ExternalLoginModel

@inject IHtmlLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Identity_Account_ExternalLogin_Title"];
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">@Localizer["Identity_Account_ExternalLogin_Subtitle",@Model.ProviderDisplayName]</h2>
<hr />

<p id="external-login-description" class="text-info">
    @Localizer["Identity_Account_ExternalLogin_Description",@Model.ProviderDisplayName]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-messages="All" class="text-dark-red"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="@Html.DisplayTextFor(m => m.Input.UserName)" />
                <label asp-for="Input.UserName"></label>
                <span asp-validation-for="Input.UserName" class="invalid-feedback text-dark-red"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="@Html.DisplayTextFor(m => m.Input.Email)" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="invalid-feedback text-dark-red"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Identity_Account_ExternalLogin_Submit"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
