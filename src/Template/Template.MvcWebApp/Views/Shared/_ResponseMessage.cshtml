@using Template.Common.Extensions;

@if (ViewData.ContainsKey("ResponseMessage") && ViewBag.ResponseMessage != null)
{
    ResponseMessageViewModel responseMessage = ViewBag.ResponseMessage;
    <div class="alert alert-@responseMessage.MessageType.GetDescription() alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @if (!responseMessage.Title.IsNullOrWhiteSpace())
        {
            <h4 class="alert-heading">@responseMessage.Title</h4>
        }
        @ViewBag.ResponseMessage.Content
    </div>
}