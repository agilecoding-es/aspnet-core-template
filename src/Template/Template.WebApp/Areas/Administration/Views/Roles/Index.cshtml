@using Template.Domain.Entities.Identity;
@using Template.Security.Authorization;

@model IEnumerable<Role>

@inject IAuthorizationService AuthService;
@inject IHtmlLocalizer Localizer;

@{
    var title = @Localizer["Administration_Roles_Index_Title"].Value;
    ViewData["Title"] = title;

    var canAddRole = (await AuthService.AuthorizeAsync(User, Policies.AddRole)).Succeeded;
    var canEditRole = (await AuthService.AuthorizeAsync(User, Policies.EditRole)).Succeeded;
    var canDeleteRole = (await AuthService.AuthorizeAsync(User, Policies.DeleteRole)).Succeeded;
}

@section SectionBar{
    <partial name="_SectionBar" model="title" />
}
<p class="text-end">
    @if (canAddRole)
    {
        <a class="btn btn-outline-primary" asp-action="Create">@Localizer["Shared_Buttons_CreateNew"]</a>
    }
</p>
<hr />
<div>
    @*<partial name="_ResponseMessage" model="ViewData.ModelState" />*@

    <div class="grid">
        @foreach (var role in Model)
        {
            <div class="g-col-3">
                <div class="card">
                    <div class="card-body position-relative">
                        @*<a asp-action="Details" asp-route-id="@role.Id">*@
                        <h5 class="card-title">
                            @Html.DisplayFor(modelrole => role.Name)
                        </h5>
                        @*</a>*@

                        <div class="row">
                            <div class="col text-end">
                                @if (canEditRole)
                                {
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">@Localizer["Shared_Buttons_Edit"]</a>
                                }
                                @if (canDeleteRole)
                                {
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-dark-red" onclick="return confirm('Are you sure you wanto to delete this role [@role.Name]?)">@Localizer["Shared_Buttons_Delete"]</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section scripts{
    <script type="text/javascript" src="~/Content/js/Areas/SampleMVC/views/sample-list/index.bundle.js"></script>
}