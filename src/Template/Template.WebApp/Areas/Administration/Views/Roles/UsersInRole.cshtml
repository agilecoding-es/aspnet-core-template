@using Microsoft.AspNetCore.Mvc.Localization;
@model List<UserRoleViewModel>;

@inject IHtmlLocalizer Localizer;

@{
    var roleId = ViewBag.RoleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>@Localizer["Administration_Roles_UsersInRole_Title"]</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                </div>
            }

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">@Localizer["Shared_Buttons_Update"]</button>
            <a asp-action="Edit" asp-route-id="@roleId" class="btn btn-outline-primary">@Localizer["Shared_Buttons_Cancel"]</a>
        </div>
    </div>
</form>