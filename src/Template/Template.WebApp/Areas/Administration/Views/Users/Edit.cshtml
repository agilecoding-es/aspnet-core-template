@using Template.Security.Authorization;
@model EditUserViewModel

@inject IAuthorizationService AuthService;
@inject IStringLocalizer Localizer;

@{
    var title = @Localizer["Administration_User_Edit_Title"].Value;
    ViewData["Title"] = title;

    var canEditAdminRole = (await AuthService.AuthorizeAsync(User, Policies.EditAdminRole)).Succeeded;
}

@section SectionBar{
    <partial name="_SectionBar" model="@title" />
}
@if (Model.IsLockout)
{
    <form asp-area="Administration" asp-controller="Users" asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="d-flex align-items-start flex-column flex-grow-1">
            <div class="form-group w-100">
                <h3>
                    @Localizer["Administration_User_Edit_UserLockedOut"]
                </h3>
                <button type="submit" class="btn btn-danger">@Localizer["Administration_User_Edit_ResetPassword"]</button>
            </div>
        </div>
    </form>
}
<form method="post">
    <div class="row">
        <div class="col-4">
            <div asp-messages="All" hiding-delay="15" class="message-absolute position-absolute top-0 end-0"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="d-flex align-items-start flex-column flex-grow-1">
                <div class="form-group w-100">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" value="@Model.UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-dark-red"></span>
                </div>
                <div class="form-group w-100">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" value="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-dark-red"></span>
                </div>
                <div class="w-100">
                    <hr class="silver" />
                    <a class="btn btn-outline-light-blue-2 me-2" asp-action="Index">@Localizer["Shared_Buttons_BackToList"]</a>

                    <input type="submit" value="@Localizer["Shared_Buttons_Update"]" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h3>@Localizer["Administration_User_Edit_RolesSection"]</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        @foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">@Localizer["Administration_User_Edit_RolesSection_Empty"]</h5>
                    }
                </div>
                <div class="card-footer text-muted">
                    @if (canEditAdminRole)
                    {
                        <a class="btn btn-primary" asp-action="ManageRoles" asp-route-id="@Model.Id">@Localizer["Administration_User_Edit_AddOrRemoveRolesButton"]</a>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>@Localizer["Administration_User_Edit_ClaimsSection"]</h3>
                </div>
                <div class="card-body">
                    @if (Model.Claims.Any())
                    {
                        @foreach (var claim in Model.Claims)
                        {
                            <h5 class="card-title">@claim</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">@Localizer["Administration_User_Edit_ClaimsSection_Empty"]</h5>
                    }
                </div>
                <div class="card-footer text-muted">
                    @if (canEditAdminRole)
                    {
                        <a class="btn btn-primary" asp-action="ManageClaims" asp-route-id="@Model.Id">@Localizer["Administration_User_Edit_AddOrRemoveClaimsButton"]</a>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
