@page
@using Microsoft.Extensions.Localization;
@model LogoutModel

@inject IStringLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Identity_Account_Logout_Title"];
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">@Localizer["Identity_Account_Logout_Submit"]</button>
            </form>
        }
        else
        {
            <p>@Localizer["Identity_Account_Logout_Confirmation"]</p>
        }
    }
</header>
