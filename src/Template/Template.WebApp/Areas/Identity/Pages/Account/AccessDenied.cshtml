@page
@using Microsoft.Extensions.Localization;
@model AccessDeniedModel

@inject IStringLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Identity_Account_AccessDenied_Title"];
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}

<div class="d-flex justify-content-center my-5">
    <div class="card card-error">
        <img width="400" height="200" src="~/Content/images/errors/403.svg" class="card-img-top img-fluid" alt="403 Error">
        <div class="card-body d-flex flex-wrap text-center  align-content-center">
            <h4 class="card-title col-12 text-uppercase mt-2">@Localizer["Identity_Account_AccessDenied_Title"]</h4>
            <p class="card-text col-12 fs-5">@Localizer["Identity_Account_AccessDenied_Content"]</p>
            <a class="btn btn-primary mx-auto mb-2" asp-area="" asp-controller="Home" asp-action="Index">Volver a inicio</a>
        </div>
    </div>
</div>
