@using Template.Configuration;

@model ErrorViewModel
@*@inject AppSettings Settings*@

@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}

@*@if (Settings.Errors.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}*@


<div class="d-flex justify-content-center my-5">
    <div class="card card-error">
        <img width="400" height="200" src="~/content/images/errors/@(Model.StatusCode).svg" class="card-img-top img-fluid" alt="@Model.StatusCode Error">
        <div class="card-body d-flex flex-wrap text-center  align-content-center">
            <h4 class="card-title col-12 text-uppercase mt-2">@Model.Title</h4>
            <p class="card-text col-12 fs-5">@Model.Description</p>
            <a class="btn btn-primary mx-auto mb-2" asp-area="" asp-controller="Home" asp-action="Index">Volver a inicio</a>
        </div>
    </div>
</div>
