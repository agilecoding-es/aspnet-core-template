@using Microsoft.AspNetCore.Http.Extensions;
@using Microsoft.Extensions.Localization;
@using Microsoft.Extensions.Options;
@using System.Globalization;
@using Template.Application.Features.IdentityContext;
@using Template.Security.Authorization;
@using Template.WebApp.Extensions;
@using Template.Application.Features.IdentityContext.Services;

@inject SignInManager SignInManager
@inject UserManager UserManager
@inject IAuthorizationService AuthService;
@inject IOptions<RequestLocalizationOptions> LocalizationOptions
@inject IStringLocalizer Localizer


@{
    string returnUrl = ViewContext.HttpContext.Request.GetEncodedPathAndQuery();
    var requestCultureFeature = Context.GetRequestCultureFeature();
    var requestCulture = requestCultureFeature.RequestCulture.UICulture.Name.Length == 2 ? requestCultureFeature.RequestCulture.UICulture.Name : requestCultureFeature.RequestCulture.UICulture.Parent.Name;
    var cultureItems = LocalizationOptions.Value.SupportedUICultures
                        .Where(c => c.ToString().Length == 2)
                        .Select(c => new SelectListItem { Value = c.Name, Text = c.NativeName.ToUpper() })
                        .ToList();
    var currentLang = cultureItems.Find(x => x.Value == CultureInfo.CurrentUICulture.TwoLetterISOLanguageName);

    var isAdmin = (await AuthService.AuthorizeAsync(User, Policies.AdminUser)).Succeeded;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Template.WebApp</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/Content/theme/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/Content/theme/site.min.css" />
    </environment>
    <link rel="stylesheet" href="~/Content/vendors/bootstrap-icons/font/bootstrap-icons.min.css" />
</head>
<body class="body-error">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-blue-1 border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Template</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-blue-3 border-top text-white text-center">
        <div class="container">
            &copy; 2024 - Template.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">@Localizer["Layout_Footer_Privacy"]</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/Content/vendors/jquery.slim.js"></script>
        <script src="~/Content/vendors/bootstrap.bundle.js"></script>
        <script src="~/Content/vendors/references.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/Content/vendors/jquery.slim.min.js"></script>
        <script src="~/Content/vendors/bootstrap.bundle.min.js"></script>
    </environment>
</body>
</html>
