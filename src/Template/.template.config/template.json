{
  "$schema": "https://json.schemastore.org/template.json",
  "author": "Javier Lopez Malone",
  "classifications": [ "Web", "MVC" ],
  "identity": "Template.WebApp",
  "name": "Template.WebApp",
  "shortName": "tempwebapp",
  "sourceName": "Template",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "symbols": {
    //"TargetFramework": {
    //  "type": "parameter",
    //  "description": "The target framework for the project.",
    //  "datatype": "choice",
    //  "choices": [
    //    { "choice": "net6.0" },
    //    { "choice": "net8.0" }
    //  ],
    //  "defaultValue": "net6.0",
    //  "replaces": "{TargetFramewok}"
